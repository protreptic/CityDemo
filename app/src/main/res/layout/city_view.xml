<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginRight="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginTop="0dp"
    android:background="@color/white"
    android:padding="8dp"
    cardview:cardCornerRadius="3dp"
    cardview:cardElevation="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:padding="5dp"
            android:text="@string/city_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_gray"/>

        <ImageView
            android:id="@+id/city_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/city_name"
            android:layout_alignStart="@+id/city_name"
            android:layout_below="@+id/city_name"
            android:background="@color/light_gray"
            android:contentDescription="@string/contentDescription"
            android:minHeight="150dp"
            android:padding="1dp"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/bottomPane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/city_location"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/city_location"
            android:layout_below="@+id/city_location"
            android:background="@color/white"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_gray"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>